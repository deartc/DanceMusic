	-- title and artist who recorded the song 'Peace'
	SELECT title, artist
	FROM album JOIN track
	ON (album.asin=track.album)
	WHERE song = 'Peace'
	

	--2. Artist who recorded the song 'Joy'? 
	SELECT artist
	FROM album JOIN track
	ON (album.asin = track.album)
	WHERE song = 'Joy'
	






	

	--GROUP BY expressions on the joined table. 
	SELECT title, COUNT(*)
	FROM album JOIN track ON (asin=album)
	GROUP BY title
	

	--5.For each album show the title and the total number of tracks containing the word 'Love' (albums not having not shown 
	
	SELECT title, COUNT(*)
	FROM album JOIN track ON (asin=album)
	WHERE song LIKE '%Love%'
	GROUP BY title
	





	

	

	
	
	

	
	
	
	
	
	
	

























